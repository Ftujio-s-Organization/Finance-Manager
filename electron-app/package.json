{
  "name": "finance-manager-electron",
  "version": "0.1.0",
  "description": "The electron part of the application",
	"main": "./dist/main.js",
  "scripts": {
    "start": "electron-forge start dist",
    "tsc:dev": "tsc -w",
    "tsc:prod": "tsc",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ftujio/Finance-Manager.git"
  },
  "author": "Ftujio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ftujio/Finance-Manager/issues"
  },
  "homepage": "https://github.com/Ftujio/Finance-Manager#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@types/node": "^14.14.35",
    "electron": "14.0.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
				"asar": true
			},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "finance_manager_electron"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
